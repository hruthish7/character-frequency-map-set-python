        "x = input('Enter a word: ')\n",
        "a = list(x)\n",
        "print(\"List of characters:\", a)\n",
        "\n",
        "y = set(a)\n",
        "print(\"Unique characters (set):\", y)\n",
        "\n",
        "z = list(y)\n",
        "print(\"Unique characters (list):\", z)\n",
        "\n",
        "\n",
        "# Character frequency using map (set ensures uniqueness)\n",
        "freq_values = list(map(lambda c: (c, a.count(c)), z))\n",
        "print(freq_values)\n"
